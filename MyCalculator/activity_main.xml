<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="56sp"
        android:textColor="@color/white"
        android:gravity="right"
        android:id="@+id/inputbox"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="AC"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/teal_200"
                android:id="@+id/btAC"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="cleanInput"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="="
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/teal_200"
                android:id="@+id/btequal"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:onClick="equaloperator"></Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="7"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:id="@+id/bt7"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getNumbers"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="8"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:id="@+id/bt8"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getNumbers"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="9"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:id="@+id/bt9"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getNumbers"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="X"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:id="@+id/btmultiply"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getOperator"></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="4"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:id="@+id/bt4"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getNumbers"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="5"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:id="@+id/bt5"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getNumbers"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="6"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:id="@+id/bt6"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getNumbers"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="+"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:id="@+id/btadd"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getOperator"></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="1"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:id="@+id/bt1"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getNumbers"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="2"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:id="@+id/bt2"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getNumbers"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="3"
                android:textSize="38sp"
                android:id="@+id/bt3"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getNumbers"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="-"
                android:textSize="38sp"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:id="@+id/btsub"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="getOperator"></Button>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:text="0"
            android:textSize="38sp"
            android:id="@+id/bt0"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:layout_weight="1"
            android:layout_marginRight="1pt"
            android:onClick="getNumbers"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:text="."
            android:textSize="38sp"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:id="@+id/btdot"
            android:layout_weight="1"
            android:layout_marginRight="1pt"
            android:onClick="getNumbers"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:text="/"
            android:textSize="38sp"
            android:textColor="@color/white"
            android:background="@color/teal_700"
            android:id="@+id/btdivide"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:onClick="getOperator"></Button>

    </LinearLayout>

</LinearLayout>